{
    "editor.formatOnSave": true,
    "files.autoSave": "off",
    "editor.renderWhitespace": "all",
    "editor.scrollBeyondLastLine": false,
    "editor.tabSize": 4,
    "editor.wordWrap": "on",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/.tmp": true,
        "**/deploy": true,
        "**/node_modules": true
    },
    "html.format.indentHandlebars": true,
    "beautify.language": {
        "js": {
            "type": [
                "javascript",
                "json"
            ],
            "filename": [
                ".jshintrc",
                ".jsbeautify"
            ]
        },
        "css": [
            "css",
            "scss",
            "less"
        ],
        "html": [
            "htm",
            "html"
        ]
    },
    "extensions.autoUpdate": true,
    "window.title": "${activeEditorMedium}${separator}${rootName}"
}
